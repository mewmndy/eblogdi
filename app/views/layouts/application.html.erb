<!DOCTYPE html>
<html>
<head>
  <title>E-Blog for Smartphone</title>
  
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <style>
    
    </style>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>


<body>

  <header class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Blog', root_path, class: 'navbar-brand' %>
      </div>
      <div id="bs-navbar-collapse-1" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'Post', posts_path %>
          </li>
          <li>
            <%= link_to 'About', about_homes_path %>
          </li>
        </ul>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-gear lg"></i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out lg"></i>
              <% end %>
            </li>
          </ul>
        <% else %>
            <ul class="nav navbar-nav navbar-right">
            
            <li>
              <%= link_to new_user_session_path do%>
                <i class="fa fa-sign-in lg"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </header>

  <div class="container-fluid">
    <%= yield %>
  </div>
</br></br>
</body>
</html>
