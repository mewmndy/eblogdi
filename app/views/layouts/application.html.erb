<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;">

  <title>บทความสำหรับมือถือ</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Bootstrap -->
        <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
        <link href="sticky-footer.css" rel="stylesheet">

</head>

<div class = "container">
<body>
  
  <div class="row">
  <nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" <%= link_to 'หน้าหลัก', root_path %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'บทความของฉัน', posts_path %>
        </li>
        <li>
          <%= link_to 'ข้อมูลส่วนตัว', about_homes_path %>
        </li>
      </ul>
      <div class="container">
       <ul class="nav navbar-nav navbar-right">
        
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-gear lg"></i> ตั้งค่า  
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out lg"></i> ออกจากระบบ  
              <% end %>
            </li>
          </ul>
        <% else %>
            <ul class="nav navbar-nav navbar-right">
            
            <li>
              <%= link_to new_user_session_path do%>
                <i class="fa fa-sign-in lg"></i> เข้าสู่ระบบ 
              <% end %>
            </li>
          </ul>
        <% end %>
        
      </ul>
      </div>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

</br>
  <div class="container-fluid">
    </br></br>
<%= yield %>
  </div>
</br></br>


    
  </div>

</body>
</div>
</html>
