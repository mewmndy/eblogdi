
<div class="panel panel-warning">
      <div class="panel-heading">
        <h4 >
        <strong>Title:</strong>
        <%= @post.title %>
      </h4>

      <h4 >
        <strong>Body:</strong>
        
        <article class="fit-full  color-scheme--lightgrey  grid-row fit-fixed js-postField js-notesSource editable" ><%= @post.body %></article>

        
      </h4>
      <i></i>
      <p>
        <strong>User:</strong>
        <%= @post.user.email %>
      </p>
      </div>
      <div class="panel-body">
        <h4> Comment </h4>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= comment.commenter %>:</strong>
            <%= comment.body %>
          </p>
        <% end %>
      </div>
    </div>


<%= render 'commentform' %>


<div class= .col-xs-6 .col-md-4></div></div>
</br>

<div class="container">
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
