<div class="panel panel-warning">
      <div class="panel-heading">
        <h4 >
        <strong>Title:</strong>
        <%= @post.title %>
      </h4>

      <h4 >
        <strong>Body:</strong>
      </br>
        <%= @post.body %>
      </h4>
      <i></i>
      <p>
        <strong>User:</strong>
        <%= @post.user.email %>
      </p>
      </div>
      <div class="panel-body">
        <h4> Comment </h4>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= comment.commenter %>:</strong>
            <%= comment.body %>
          </p>
        <% end %>
      </div>
    </div>


