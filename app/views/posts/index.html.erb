<style type="text/css">
.moretext {
   background:url(/images/leaf.gif) no-repeat right middle;
   padding: 10px 50px 15px 5px}
  </style>
<div class="container-fluid">

<h2>
<div class="row">
รวมบทความ
<%= link_to 'เขียนบทความ', new_post_path, class: 'btn btn-default pull-right' %>  
</div>
</h2>

<table class="table table-hover">

<tbody>
<% @posts.each do |post| %>
<tr>
<td>
<h4><%= post.title %></h4>

<div class="container-fluid moretext"><%= post.body %></div>

<%= link_to 'อ่านบทความ...', post %>
        
<td><%= link_to 'แก้ไข', edit_post_path(post) %></td>
 <td><%= link_to 'ลบ', post, method: :delete, data: { confirm: 'ต้องการลบบทความนี้ใช่หรือไม่' } %></td>
</tr>
<% end %>
</tbody>
</table>

</div>
