<h2>ลงชื่อเข้าใช้งานระบบ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>/อีเมลล์<br />
    
    <input type="email" class="form-control" id="inputEmail" placeholder="Email" <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>/รหัสผ่าน
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum /รหัสผ่านอย่าน้อย 8 ตัวอัษร)</em>
    <% end %><br />
    
    <input type="password" class="form-control" id="inputPassword" placeholder="Password"<%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>/ยืนยันรหัสผ่านรหัสผ่าน<br />
    <input type="password" class="form-control" id="inputPasswordConfirmation" placeholder="Password"<%= f.password_field :password_confirmation, autocomplete: "off" %>
    
  </div>

</br>
  <div class="actions">
    
    <button type="submit" class="btn btn-default" <%= f.submit "Sign up" %> Submit
          </button><br/>
  </div>
   <% end %>


<%= render "devise/shared/links" %>
